<!--pagges/audio/index.wxml-->

<view class="page">
  <view class="page__hd">
    <text class="page__title">audios</text>
  </view>
  <view class="page__bd">
    <view class="section section_gap" style="text-align: center;">
      <audio id="audioPlayer" src="{{current.src}}" poster="{{current.poster}}"
             name="{{current.name}}" author="{{current.author}}"
             action="{{audioAction}}" controls></audio>
    </view>
    <view class="btn-area">
      <button type="primary" bindtap="audioPlay">播放</button>
      <button type="primary" bindtap="audioPause">暂停</button>
      <button type="primary" bindtap="audioForward">设置当前播放时间为20秒</button>
      <button type="primary" bindtap="audioStart">回到开头</button>
    </view>
  </view>
</view>