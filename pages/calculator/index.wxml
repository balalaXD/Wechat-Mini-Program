<!--pages/calculator/index.wxml-->
<view class="container" bindtap="handleTap">
  <view class="screen">{{result}}</view>
  <view class="btnGroup">
    <switch checked="{{record_history}}" bindchange="handleSwitchRecordHistory" />
    <view class="history">Record History</view>
  </view>
  <view class="btnGroup">
    <button data-value="history" hover-class="other-button-hover">H</button>
    <button data-value="clear" hover-class="other-button-hover">C</button>
    <button hover-class="other-button-hover">
      <icon type="cancel" size="38" color="red" class="btnIcon" />
    </button>
    <button data-value="÷" hover-class="other-button-hover">÷</button>
  </view>
  <view class="btnGroup">
    <button data-value="7" class="blue" hover-class="button-hover-num">7</button>
    <button data-value="8" class="blue" hover-class="button-hover-num">8</button>
    <button data-value="9" class="blue" hover-class="button-hover-num">9</button>
    <button data-value="*" hover-class="other-button-hover">*</button>
  </view>
  <view class="btnGroup">
    <button data-value="4" class="blue" hover-class="button-hover-num">4</button>
    <button data-value="5" class="blue" hover-class="button-hover-num">5</button>
    <button data-value="6" class="blue" hover-class="button-hover-num">6</button>
    <button data-value="-" hover-class="other-button-hover">-</button>
  </view>
  <view class="btnGroup">
    <button data-value="1" class="blue" hover-class="button-hover-num">1</button>
    <button data-value="2" class="blue" hover-class="button-hover-num">2</button>
    <button data-value="3" class="blue" hover-class="button-hover-num">3</button>
    <button data-value="+" hover-class="other-button-hover">+</button>
  </view>
  <view class="btnGroup">
    <button data-value="±" hover-class="other-button-hover">±</button>
    <button data-value="0" class="blue" hover-class="button-hover-num">0</button>
    <button data-value="." hover-class="other-button-hover">.</button>
    <button data-value="=" class="orange" hover-class="other-button-hover">=</button>
  </view>
</view>