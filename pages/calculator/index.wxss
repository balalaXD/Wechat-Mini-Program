/* pages/calculator/index.wxss */

.screen {
  background-color: #eee;
  align-self: stretch;
  text-align: right;
  padding: 0 40rpx;
  margin: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #ddd;
  border-radius: 3px;
}

.container {
  display: flex;
  padding: 30rpx 0;
  flex-direction: column;
  align-items: center;
  padding-top: 10px;
}

.btnGroup {
  display: flex;
}

.btnGroup button {
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0,0,0,0.3);
  border-radius: 5px;

  display: flex;
  justify-content: center;
  align-items: center;
}

.orange {
  background-color: #f78d1d;
  color: #fef4e9;
  border: solid 1px #da7c0c;
}

.blue {
  background-color: #0095cd;
  color: #d9eef7;
  border: solid 1px #0076a3;
}

.button-hover-num {
  background-color: #0094cc;
  opacity: 0.7;
}

.other-button-hover {
  background-color: red;
}

.history {
  display: flex;
  align-items: center;
  justify-content: center;
}